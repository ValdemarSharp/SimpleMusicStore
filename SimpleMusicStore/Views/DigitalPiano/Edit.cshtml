@using SimpleMusicStore.Models.Enums
@model SimpleMusicStore.Models.MusicalInstruments.DigitalPiano
@{
    ViewBag.Title = "Редактирование товара";
}

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

<div class="container py-2 content-fullwindow-container">
    <h2 class="text-center font-weight-light">Редактирование товара</h2>
    <form asp-action="edit" asp-controller="DigitalPiano" asp-route-id="@Model.Id">
        <div class="form-group">
            <label asp-for="Title" class="control-label">Название</label>
            <input type="text" asp-for="Title" class="form-control" />
            <span asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label">Описание</label>
            <textarea rows="5" type="text" asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description"></span>
        </div>
        <div class="form-group">
            <label asp-for="Cost" class="control-label">Цена</label>
            <input type="text" asp-for="Cost" class="form-control" />
            <span asp-validation-for="Cost"></span>
        </div>
        <div class="form-group">
            <label asp-for="Type" class="control-label">Тип цифорвого фортепиано</label>
            <select asp-for="Type" asp-items="Html.GetEnumSelectList<DigitalPianoType>()" class="form-control"></select>
        </div>
        <input type="hidden" asp-for="PhotoUrl" />
        <div class="form-group">
            <input asp-action="Edit" type="submit" value="Сохранить" class="btn btn-success" />
            <input asp-controller="Home" asp-action="Index" type="submit" value="Отмена" class="btn btn-light" />
        </div>
    </form>
</div>