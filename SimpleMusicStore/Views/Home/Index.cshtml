@using SimpleMusicStore.Models.ViewModels
@{
    ViewData["Title"] = "Home Page";
}
@model AllContent

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @{  
                bool isAddedActiveItem = false;
                foreach (var firm in Model.Firms)
                {
                    if (!isAddedActiveItem)
                    {
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="https://images.unsplash.com/photo-1520523839897-bd0b52f945a0?ixid=MXwxMjA3fDB8MHxzZWFyY2h8MXx8cGlhbm98ZW58MHx8MHw%3D&ixlib=rb-1.2.1&w=1000&q=80" alt="Второй слайд">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>@firm.Title</h5>
                                <p>@firm.Description</p>
                            </div>
                        </div>
                        isAddedActiveItem = true;
                    }
                    else
                    {
                            <div class="carousel-item">
                                <img class="d-block w-100" src="https://images.unsplash.com/photo-1520523839897-bd0b52f945a0?ixid=MXwxMjA3fDB8MHxzZWFyY2h8MXx8cGlhbm98ZW58MHx8MHw%3D&ixlib=rb-1.2.1&w=1000&q=80" alt="Второй слайд">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>@firm.Title</h5>
                                    <p>@firm.Description</p>
                                </div>
                            </div>
                        }
                    }

                }
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="container py-5">
        <div class="row text-center text-white mb-5">
            <div class="col-lg-7 mx-auto">
                <h1 class="display-4">Product List</h1>
            </div>
        </div>
        <div class="row">
            <div class="col mx-auto">
                <!-- List group-->
                <ul class="list-group shadow">
                    @foreach (var product in Model.Products)
                    {
                        <!-- list group item-->
                        <li class="list-group-item">
                            <!-- Custom content-->
                            <div class="media align-items-lg-center flex-column flex-lg-row p-3">
                                <div class="media-body order-2 order-lg-1">
                                    <h5 class="mt-0 font-weight-bold mb-2">@product.Title</h5>
                                    <p class="font-italic text-muted mb-0 small">@product.Description</p>
                                    <div class="d-flex align-items-center justify-content-between mt-1">
                                        <h6 class="font-weight-bold my-2">₹@product.Cost</h6>
                                        <ul class="list-inline small">
                                            <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                                            <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                                            <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                                            <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                                            <li class="list-inline-item m-0"><i class="fa fa-star-o text-gray"></i></li>
                                        </ul>
                                    </div>
                                </div><img src="https://i.imgur.com/KFojDGa.jpg" alt="Generic placeholder image" width="200" class="ml-lg-5 order-1 order-lg-2">
                            </div> <!-- End -->
                        </li>
                    }
                </ul> <!-- End -->
            </div>
        </div>
    </div>
