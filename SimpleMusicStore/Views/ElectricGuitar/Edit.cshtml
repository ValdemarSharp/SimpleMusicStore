@using SimpleMusicStore.Models.Enums
@model SimpleMusicStore.Models.MusicalInstruments.ElectricGuitar
@{
//ViewBag.Title = "Редактирование пользователя";
}
<form asp-action="edit" asp-controller="ElectricGuitar" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Title" class="control-label">Название</label>
        <input type="text" asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание</label>
        <textarea type="text" asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Cost" class="control-label">Цена</label>
        <input type="text" asp-for="Cost" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Type" class="control-label">Тип гитары</label>
        <select asp-for="Type" asp-items="Html.GetEnumSelectList<ElectricGuitarType>()" class="form-control"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>